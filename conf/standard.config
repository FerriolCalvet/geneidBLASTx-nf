/*
* This configuration file is the default one used by the pipeline
*/

process {
    // definition of the local executor. Run the pipeline in the current computer.
    executor="local"

    // resources for default process execution
    memory='10G'
    cpus='1'
    time='6h'

    // resources for execution of processes / modules with the label "four cpus". This override the default ones.
        withLabel: 'singlecpu' {
            memory='5G'
            cpus='1'
        }

        withLabel: 'fourcpus' {
            memory='20G'
            cpus='4'
        }
}
